<%- include('../includes/head.ejs'); %>
<h1 class="title is-1 has-text-white-ter">Perfil</h1>
<div class = "columns">
    <div class = "column is-3">
        <div class = "card">
            <div class="card-image">
                <figure class="image">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/7/7c/Profile_avatar_placeholder_large.png?20150327203541" alt="Foto de perfil">
                </figure>
            </div>
            <div class="card-content">
                <div class="media">
                    <div class="media-left">
                        <figure class="image is-48x48">
                            <img src=https://upload.wikimedia.org/wikipedia/commons/7/7c/Profile_avatar_placeholder_large.png?20150327203541" alt="Placeholder image">
                        </figure>
                    </div>
                    <div class="media-content">
                        <p class="title is-4 has-text-white-ter"><%= infoCliente.nombre %> <%= infoCliente.apellido %></p>
                        <p class="subtitle is-6 has-text-white-ter">Objetivo: <%= infoCliente.nombre_obj %></p>
                    </div>
                </div>
                <div class="has-text-centered">
                    <a class="button is-link" href="/perfil/ver_info">Ver informacion</a>
                </div>
            </div>
        </div>
    </div>
    <% if (dieta.length != 0) {%>
    <div class = "column is-4">
        <div class="card">
            <div class="card-image">
                <figure class="image is-4by3">
                    <a href="/dietas/<%= dieta.id_dieta %>">
                        <img src="/uploads/<%= dieta.Url_image %>" alt="Placeholder image">
                    </a>
                </figure>
            </div>
            <div class="card-content">
                <div class="media">
                    <div class="media-left">
                        <figure class="image is-48x48">
                            <img src="https://cdn-icons-png.flaticon.com/512/706/706133.png" alt="Placeholder image">
                        </figure>
                    </div>
                    <div class="media-content">
                        <p class="title is-4 has-text-white-ter"><%= dieta.nombre %></p>
                        <p class="subtitle is-6 has-text-white-ter"><%= dieta.tipo_dieta %></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% } if (rutina.length != 0) {%>
        <div class = "column is-4">
            <div class="card">
                <div class="card-image">
                    <figure class="image is-4by3">
                        <a href="/rutinas/<%= rutina.id_rutina %>">
                            <img src="/uploads/<%= rutina.URL_Image %>" alt="Placeholder image">
                        </a>
                    </figure>
                </div>
                <div class="card-content">
                    <div class="media">
                        <div class="media-left">
                            <figure class="image is-48x48">
                                <img src="https://cdn-icons-png.flaticon.com/512/1518/1518886.png" alt="Placeholder image">
                            </figure>
                        </div>
                        <div class="media-content">
                            <p class="title is-4 has-text-white-ter"><%= rutina.nombreRutina %></p>
                            <p class="subtitle is-6 has-text-white-ter"><%= rutina.tiporutina %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>
<div class="buttons">
    <a class="button is-danger" href = "/cerrar-sesion">
      <strong>Cerrar Sesi√≥n</strong>
    </a>
  </div>

<%- include('../includes/foot.ejs'); %>