<%- include('../includes/head.ejs'); %>

<% if (dietas.length > 0) { %>
<div class="container" style="margin-top: 20px;" >
  <form action="/dietas/hola" method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
  <div class="card">
    <header class="card-header" style="background-color: aqua;">
      <p class="card-header-title" style="font-size: 30px;" >
        <%= dietas[0].nombre%>
      </p>
    </header>
  </div>
  <div class="box">
    <table class="table" width="100%">
      <thead>Alimentos</thead>
      <thead>
        <tr>
          <th>Nombre</th>
          <th><abbr title="Played">Medida</abbr></th>
          <th><abbr title="Won">Cantidad</abbr></th>
        </tr>
      </thead>
      <tbody>
        <% if (dieta_alimentos.length > 0) { %>
          <% for (let dieta_alimento of dieta_alimentos) { %>
            <tr>
            <td><%= dieta_alimento.nombre%></td>
            <td> <%= dieta_alimento.medida%></td>
            <td> <%= dieta_alimento.cantidad%></td>
          </tr>
            <% } %>
        <% } %>
      </tbody>
    </table>
    <div class="columns" >
      <div class="column" style="width: 50%; float:left;">
        <table class="table" style="width: 90%;">
          <thead>
            <tr>
              <th>MACRONUTRIENTES</th>
            </tr>
          </thead>
          <tbody>
            <% if (macronutriente.length > 0) { %>
              <% for (let macro of macronutriente) { %>
              <tr>
              <th>Calorias</th>
                <td><%= macro.calorias%></td>
                <tr></tr>
                <th>Proteinas</th>
                <td><%= macro.proteinas%></td>
                <tr></tr>
                <th>Carbohidratos</th>
                <td> <%= macro.carbohidratos%></td>
                <tr></tr>
                <th>Grasas</th>
                <td>  <%= macro.grasas%></td>
              </tr>
                <% } %>
            <% } %>
          </tbody>
        </table>
        <br><br>
        <div class="buttons">
          <input class="button is-primary" type="button" value="Seleccionar Dieta" onclick="openPopup()">
          <div class="popup" id="popup">
            <h2 class="title is-2">¿Seguro que quieres seleccionar la dieta de <%= dietas[0].nombre%>?</h2>
            <button class="button is-success" type = "submit">Confirmar</button>
            <button class="button is-danger" type="button" onclick="closePopup()">Cancelar</button>
          </div>
        </form>
        <script>
        let popup = document.getElementById("popup");
        function openPopup(){
          popup.classList.add("open-popup");
        }
        function closePopup(){
          popup.classList.remove("open-popup")
          }
          </script>
          <a href="/dietas/" class="button is-danger">Atrás</a>
        </div>
      </div>
      <div class="column" style="width: 50%; float: right; ">
        <table class="table" style="width: 100%;">
          <thead>
            <tr>
              <th>MICRONUTRIENTES</th>
            </tr>
          </thead>
          <tbody>
            <% if (micronutriente.length > 0) { %>
              <% for (let micro of micronutriente) { %>
              <tr>
              <th>Ceniza</th>
                <td><%= micro.ceniza%></td>
                <tr></tr>
                <th>Total de Fibra</th>
                <td><%= micro.fibra_total%></td>
                <tr></tr>
                <th>Calcio</th>
                <td> <%= micro.calcio%></td>
                <tr></tr>
                <th>Fosforo</th>
                <td><%= micro.fosforo%></td>
                <tr></tr>
                <th>Hierro</th>
                <td><%= micro.hierro%></td>
                <tr></tr>
                <th>Tiamina</th>
                <td><%= micro.tiamina%></td>
                <tr></tr>
                <th>Riboflavina</th>
                <td><%= micro.riboflavina%></td>
                <tr></tr>
                <th>Niacina</th>
                <td> <%= micro.niacina%></td>
                <tr></tr>
                <th>Vitamina C</th>
                <td><%= micro.vit_c%></td>
                <tr></tr>
                <th>Vitamina A</th>
                <td><%= micro.vit_a%></td>
                <tr></tr>
                <th>Ácidos Grasos Mínimos</th>
                <td> <%= micro.acgrasosmin%></td>
                <tr></tr>
                <th>Ácidos Grasos Poliinsaturados</th>
                <td><%= micro.acgrasospoli%></td>
                <tr></tr>
                <th>Ácidos  Grasos Saturados</th>
                <td><%= micro.acgrasossat%></td>
                <tr></tr>
                <th>Colesterol</th>
                <td><%= micro.colesterol%></td>
                <tr></tr>
                <th>Potasio</th>
                <td><%= micro.potasio%></td>
                <tr></tr>
                <th>Sodio</th>
                <td><%= micro.sodio%></td>
                <tr></tr>
                <th>Zinc</th>
                <td><%= micro.zinc%></td>
                <tr></tr>
                <th>Magnesio</th>
                <td> <%= micro.magnesio%></td>
                <tr></tr>
                <th>Vitamina B6</th>
                <td><%= micro.vit_b6%></td>
                <tr></tr>
                <th>Vitamina B12</th>
                <td><%= micro.vit_b12%></td>
                <tr></tr>
                <th>Ácido Fólicos</th>
                <td> <%= micro.acfolico%></td>
                <tr></tr>
                <th>Folato</th>
                <td><%= micro.folatoeq%></td>
              </tr>
                <% } %>
            <% } %>
          </tbody>
        </table>
      </div>
  </div>
  </form>
</div>
<% } else { %>
  <h1>No hay detalles para esta dieta</h1>
<% } %>

<%- include('../includes/foot.ejs'); %>
