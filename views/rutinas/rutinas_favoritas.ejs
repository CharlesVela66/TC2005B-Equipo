<%- include('../includes/head.ejs'); %>
<h1 class = "title is-1 has-text-white-ter">Rutinas Favoritas</h1>
<% if (rutinas.length > 0) { %>
    <div class="columns">
        <% let columns = 0; %>
        <% for (let rutina of rutinas) { %>
            <% if (columns % 4 == 0) { %>
    </div>
    <div class="columns">
            <% } %>
            <% columns++; %>
            <div class="column is-3">
                <div class="card">
                    <div class="card-image">
                        <figure class="image is-4by3">
                            <img src="https://fnsi.com.mx/wp-content/uploads/2020/06/GYM-17-1024x731.jpg" alt="Placeholder image" >
                        </figure>
                    </div>
                    <div class="card-content">
                        <div class="media">
                            <div class="media-left">
                                <figure class="image is-48x48">
                                    <img src="https://cdn-icons-png.flaticon.com/512/1518/1518886.png" alt="Placeholder image">
                                </figure>
                            </div>
                            <div class="media-content">
                                <p class="title is-4"><%= rutina.nombre %></p>
                                <p class="subtitle is-6"><%= rutina.tipo %></p>
                            </div>
                        </div>
                    
                    </div>
                </div>
            </div>
        <% } %>
    </div>
<% } else { %>
    <h1>No hay rutinas favoritas registradas</h1>
<% } %>   
