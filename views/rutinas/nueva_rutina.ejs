<%- include('../includes/head.ejs'); %>
<h1 class = "title is-1 has-text-white-ter">Nueva Rutina</h1>
    <form action="/rutinas/nueva_rutina" method="POST" enctype="multipart/form-data">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" >

        <label for="nombre">Nombre:</label>
        <input type="text" name="nombre" required><br><br>

        <label for="descripcion">Descripción:</label>
        <textarea name="descripcion" rows="4" cols="50"></textarea><br><br>

        <label for="duracion">Duración:</label>
        <input type="text" name="duracion" required><br><br>

        <label for="imagen">Imagen:</label>
        <input type="file" name="imagen" required><br><br>

        <label for="ejercicios">Ejercicios:</label>
        <select name="ejercicios" multiple>
            <% ejercicios.forEach(ejercicio => { %>
                <option value="<%= ejercicio.id_ejercicio %>"><%= ejercicio.descripcion %></option>
            <% }) %>
        </select><br><br><br>
        <input type="submit" value="Crear Rutina">
    </form>
<%- include('../includes/foot.ejs') %>